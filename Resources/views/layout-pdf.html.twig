{% spaceless %}
<!DOCTYPE html>
    <head>
{# Meta #}
        {% block head %}
            <meta charset="utf-8" />
            <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
            <meta name="author" content="author" />
            <link rel="copyright" title="copyright" />
            <title>{{ title }}</title>
            <base />
        {% endblock %}
{# Css #}
        {% block css %}
{# Links MUST be absolute to be included in the PDF #}
            <link rel="stylesheet"
                type="text/css"
                href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
                integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
                crossorigin="anonymous" />
            <link rel="stylesheet"
                type="text/css"
                href="{{ absolute_url(asset('css/styles.min.css')) }}" />
        {% endblock %}
    </head>
{# Body #}
    <body>
{# Header #}
        {{ include('@c975LGiftVoucher/fragments/header-pdf.html.twig') }}
{# Title #}
        <h1>
            {{ title }}
        </h1>
{# Content #}
        {% block giftVoucher_content %}
        {% endblock %}
{# Footer #}
        {{ include('@c975LGiftVoucher/fragments/footer-pdf.html.twig') }}
    </body>
</html>
{% endspaceless %}