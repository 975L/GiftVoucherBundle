{% trans_default_domain 'toolbar' %}

{% spaceless %}
{# Display #}
{% if type == 'modify' or type == 'delete' %}
    {{ toolbar_button(path('giftvoucher_display_available', {'id': giftVoucher.id}), 'display')|raw }}
{% endif %}

{# New #}
{% if type != 'new' %}
    {{ toolbar_button(path('giftvoucher_new_available'), 'new')|raw }}
{% endif %}

{# Modify #}
{% if type == 'displayAvailable' %}
    {{ toolbar_button(path('giftvoucher_modify_available', {'id': giftVoucher.id}), 'modify')|raw }}
{% endif %}

{# Duplicate #}
{% if type == 'display' or type == 'modify' or type == 'displayAvailable' %}
    {{ toolbar_button(path('giftvoucher_duplicate_available', {'id': giftVoucher.id}), 'duplicate')|raw }}
{% endif %}

{# Cancel #}
{% if type != 'dashboard' and type != 'displayAvailable' %}
    {{ toolbar_button('cancel', 'cancel')|raw }}
{% endif %}

{# Delete #}
{% if type == 'display' or type == 'modify' or type == 'displayAvailable' %}
    {{ toolbar_button(path('giftvoucher_delete_available', {'id': giftVoucher.id}), 'delete')|raw }}
{% endif %}

{# Help #}
{% if type != 'help' %}
    {{ toolbar_button(path('giftvoucher_help'), 'help')|raw }}
{% endif %}
{% endspaceless %}