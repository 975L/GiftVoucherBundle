{% trans_default_domain 'toolbar' %}

{% spaceless %}
{# Dashboard #}
{{ toolbar_button(path('giftvoucher_dashboard'), 'dashboard', 'md', 'label.giftvoucher'|trans) }}

{# Display #}
{% if type == 'modify' or type == 'delete' %}
    {{ toolbar_button(path('giftvoucher_display', {'id': object.id}), 'display') }}
{% endif %}

{# New #}
{% if type != 'create' %}
    {{ toolbar_button(path('giftvoucher_create'), 'create') }}
{% endif %}

{# Modify #}
{% if type == 'displayAvailable' %}
    {{ toolbar_button(path('giftvoucher_modify', {'id': object.id}), 'modify') }}
{% endif %}

{# Duplicate #}
{% if type == 'display' or type == 'modify' or type == 'displayAvailable' %}
    {{ toolbar_button(path('giftvoucher_duplicate', {'id': object.id}), 'duplicate') }}
{% endif %}

{# Cancel #}
{% if type != 'dashboard' and type != 'displayAvailable' %}
    {{ toolbar_button('cancel', 'cancel') }}
{% endif %}

{# Delete #}
{% if type == 'display' or type == 'modify' or type == 'displayAvailable' %}
    {{ toolbar_button(path('giftvoucher_delete', {'id': object.id}), 'delete') }}
{% endif %}

{# Help #}
{% if type != 'help' %}
    {{ toolbar_button(path('giftvoucher_help'), 'help') }}
{% endif %}

{# Signout #}
{{ toolbar_button(path('user_signout'), 'signout') }}

{# Other dashboards #}
{{ toolbar_dashboards('md') }}
{% endspaceless %}
